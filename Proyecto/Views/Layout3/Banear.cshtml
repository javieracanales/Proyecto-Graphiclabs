@model Proyecto.Models.Ban;
@{
    ViewData["Title"] = "Banear usuarios";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<br />
<h3>Si quieres banear a un usuario deja un Motivo</h3>
<br />
@using (Html.BeginForm("Banear", "Layout3", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="form-group" style="color:white">
        @Html.LabelFor(model => model.Descripcion, "Motivo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <input type="submit" value="Banear"/>
    </div>
}