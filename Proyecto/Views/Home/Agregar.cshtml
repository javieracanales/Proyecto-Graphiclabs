@model Proyecto.Models.Producto;

@{
    ViewData["Title"] = "Nueva publicación";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<br />
<body style="background-color: #fffaf2">
    <div class="container" style="background-color: white; border-radius:6px; width:800px; padding-bottom:30px; padding-top:10px">
        <h3 style="color: black; text-align: center ">Nueva publicación</h3>
        <div class="container" style="background-color: #eac44c; width: 60px; height: 45px; padding-top: 3px; border-radius: 48% ">
            <i class="fa-solid fa-user-plus fa-2x" style="color:white"></i>
        </div>
        <br />
        <div class="formAgregar">
            <div class="container" style="background-color: #56456a; border-radius: 5px; width: 600px">
                <br/>
                <div class="modal-body" style="text-align:center">
                    @using (Html.BeginForm("Agregar", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken();


                    <div class="form-horizontal" style="position:relative;">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="color:white">
                        @Html.LabelFor(model => model.IdCategoria, "Categoría", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            <select name="IdCategoria" style="width: 290px; border-radius: 2px; ">
                                <option selected>Seleccione una categoría</option>
                                <option value="12">Arte</option>
                                <option value="2">Fotografía</option>
                                <option value="1">Wallpaper</option>
                            </select>
                            <br/>
                            @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>

                        <div class="form-group" style="color:white">
                            @Html.LabelFor(model => model.Titulo, "Título", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="color:white">
                            @Html.LabelFor(model => model.Descripcion, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="color:white">
                            @Html.LabelFor(model => model.Precio, "Precio", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group" style="color:white">
                            @Html.LabelFor(model => model.File, "Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-offset-2 col-md-10" style="text-align:center">
                                <input name="File" type="file" value="Seleccione un archivo" />
                                <br/>
                                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Publicar" class="btn btn-default" style="background-color: white; color: #56456a; text-align: center" />
                            </div>
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
