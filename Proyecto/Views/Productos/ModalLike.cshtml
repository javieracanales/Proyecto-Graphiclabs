<!-- Modal -->
<div class="modal fade" id="modalLike" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body" style="text-align:center; border-radius:4px;">
                <h5 class="modal-title" id="exampleModalLabel" style="color: #56456a; text-align:center">Todavia no puedes darle coranzoncito a nada :c. Registrate o inicia sesión para poder likear publicaciones.</h5>
                <br />
                <input type="submit" onclick="document.location.href='@Url.Content("~/Login/Index")'" value="Iniciar sesión" class="btn btn-primary btn-block mb-3" style="width: 200px; margin-left:30%" />
                <div class="text-center">
                    <p>¿Todavía no eres miembro? <a href="@Url.Content("~/Login/Registro")">Registrate</a></p>
                </div>
            </div>
            <div class="modal-footer" style="background-color: #56456a; border-color: #56456a;">
                @using (Html.BeginForm("Modal", "Home", FormMethod.Post))
                {
                    <button type="button" id="btnAgregar" class="btn btn-primary" data-dismiss="modal" style="background-color: #eac44c; color: #56456a; border-color: #eac44c;">Aceptar</button>
                }
            </div>
        </div>
    </div>
</div>

